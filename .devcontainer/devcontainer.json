{
	"name": "christmas-gift-exchange-assignment-python",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"runArgs": [
		"--name",
		"christmas-gift-exchange-assignment-python"
	],
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.isort",
				"ms-python.autopep8",
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance"
			]
		}
	},
	"postCreateCommand": "pip install -r requirements.txt"
}